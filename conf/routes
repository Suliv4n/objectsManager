# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET	/inventaire						controllers.Application.inventaire()
GET /interaction/:action/:target	controllers.Application.interactionObjets(action:Integer, target:String)
GET /deplacer/:i/:j					controllers.Application.deplacerObjet(i:Integer, j:Integer)
GET /deplacer/:i/:j/:coffre				controllers.Application.deplacerObjetCoffre(i:Integer, j:Integer, coffre:Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
